{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es6",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": "./src"
    },
    "exclude": [ "node_modules" ]
}